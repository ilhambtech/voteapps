pipeline {
    agent {
        kubernetes {
            containerTemplate {
                name 'maven'
                image 'moby/buildkit:master'
                command 'sleep'
                args '99d'
                privileged true
            }
        }
    }

    stages {
        stage('Run docker') {
            steps {
                container('maven'){
                    sh """
                        
                        cat /etc/os-release;
                        ls -lah;
                        cd vote;
                        which buildctl ;
                        cd vote;
                        buildctl build --frontend dockerfile.v0 --local context=. --local dockerfile=. --output type=image
                    """
                }
                
            }
        }
    }
}
