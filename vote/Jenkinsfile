pipeline {
  agent kubernetes
  stages {
    stage('Run docker') {
  
      steps {
        container('jnlp'){
          sh """
              cat /etc/os-release
              ls -lah; 
              cd vote;
          """
        }
        
        container('kaniko'){
          sh """
              ls -lah; 
              cd vote;
              /kaniko/executor --context `pwd` --verbosity debug --destination ilosaurus/vote:latest
          """
        }
          
      }
    }
  }
}
